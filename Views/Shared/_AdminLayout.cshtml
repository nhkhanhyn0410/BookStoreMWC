<!-- ===== Views/Shared/_AdminLayout.cshtml ===== -->
<!DOCTYPE html>
<html lang="vi" class="h-full bg-gray-50">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore Admin</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8'
                        }
                    }
                }
            }
        }
    </script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <!-- Chart.js for admin dashboard -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>

    <!-- Custom Admin Styles -->
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>

<body class="h-full flex bg-gray-50">
    <!-- Mobile menu overlay -->
    <div id="mobile-menu-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden"></div>

    <!-- Sidebar -->
    <aside id="sidebar"
        class="fixed inset-y-0 left-0 z-50 w-64 bg-gray-900 text-white transform -translate-x-full lg:translate-x-0 lg:static lg:inset-0 transition-transform duration-300 ease-in-out">
        <div class="flex flex-col h-full">
            <!-- Logo -->
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-700">
                <div class="flex items-center">
                    <img src="~/images/logo.png" alt="BookStore" class="h-8 mr-3 filter brightness-0 invert" />
                    <span class="text-xl font-bold">Admin Panel</span>
                </div>
                <!-- Mobile close button -->
                <button id="mobile-sidebar-close" class="lg:hidden p-1 text-gray-400 hover:text-white">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <!-- User Info -->
            <div class="px-6 py-4 border-b border-gray-700">
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-primary-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-white">@User.Identity.Name</p>
                        <p class="text-xs text-gray-300">Administrator</p>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 px-4 py-6 overflow-y-auto">
                <ul class="space-y-2">
                    <!-- Dashboard -->
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                            class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white rounded-lg transition-colors group">
                            <i class="fas fa-tachometer-alt mr-3 w-5"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <!-- Books Management -->
                    <li>
                        <div class="space-y-1">
                            <button
                                class="admin-dropdown-toggle flex items-center justify-between w-full px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white rounded-lg transition-colors">
                                <div class="flex items-center">
                                    <i class="fas fa-book mr-3 w-5"></i>
                                    <span>Quản lý sách</span>
                                </div>
                                <i class="fas fa-chevron-down text-xs transition-transform"></i>
                            </button>
                            <div class="admin-dropdown-content hidden pl-8 space-y-1">
                                <a asp-area="Admin" asp-controller="Books" asp-action="Index"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Danh sách sách
                                </a>
                                <a asp-area="Admin" asp-controller="Books" asp-action="Create"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Thêm sách mới
                                </a>

                                <a asp-area="Admin" asp-controller="Categories" asp-action="Index"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Danh mục sách
                                </a>
                                <a asp-area="Admin" asp-controller="Books" asp-action="Import"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Import sách
                                </a>
                            </div>
                        </div>
                    </li>

                    <!-- Orders Management -->
                    <li>
                        <div class="space-y-1">
                            <button
                                class="admin-dropdown-toggle flex items-center justify-between w-full px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white rounded-lg transition-colors">
                                <div class="flex items-center">
                                    <i class="fas fa-shopping-cart mr-3 w-5"></i>
                                    <span>Quản lý đơn hàng</span>
                                </div>
                                <i class="fas fa-chevron-down text-xs transition-transform"></i>
                            </button>
                            <div class="admin-dropdown-content hidden pl-8 space-y-1">
                                <a asp-area="Admin" asp-controller="Orders" asp-action="Index"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Tất cả đơn hàng
                                </a>
                                <a asp-area="Admin" asp-controller="Orders" asp-action="Pending"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Chờ xử lý
                                </a>
                                <a asp-area="Admin" asp-controller="Orders" asp-action="Shipping"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Đang giao
                                </a>
                            </div>
                        </div>
                    </li>

                    <!-- Users Management -->
                    <li>
                        <a asp-area="Admin" asp-controller="Users" asp-action="Index"
                            class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white rounded-lg transition-colors">
                            <i class="fas fa-users mr-3 w-5"></i>
                            <span>Quản lý người dùng</span>
                        </a>
                    </li>

                    <!-- Reviews Management -->
                    <li>
                        <a asp-area="Admin" asp-controller="Reviews" asp-action="Index"
                            class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white rounded-lg transition-colors">
                            <i class="fas fa-star mr-3 w-5"></i>
                            <span>Quản lý đánh giá</span>
                        </a>
                    </li>

                    <!-- Reports -->
                    <li>
                        <div class="space-y-1">
                            <button
                                class="admin-dropdown-toggle flex items-center justify-between w-full px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white rounded-lg transition-colors">
                                <div class="flex items-center">
                                    <i class="fas fa-chart-bar mr-3 w-5"></i>
                                    <span>Báo cáo</span>
                                </div>
                                <i class="fas fa-chevron-down text-xs transition-transform"></i>
                            </button>
                            <div class="admin-dropdown-content hidden pl-8 space-y-1">
                                <a asp-area="Admin" asp-controller="Reports" asp-action="Sales"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Báo cáo bán hàng
                                </a>
                                <a asp-area="Admin" asp-controller="Reports" asp-action="Inventory"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Báo cáo tồn kho
                                </a>
                                <a asp-area="Admin" asp-controller="Reports" asp-action="Customers"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Báo cáo khách hàng
                                </a>
                            </div>
                        </div>
                    </li>

                    <!-- Settings -->
                    <li>
                        <div class="space-y-1">
                            <button
                                class="admin-dropdown-toggle flex items-center justify-between w-full px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white rounded-lg transition-colors">
                                <div class="flex items-center">
                                    <i class="fas fa-cog mr-3 w-5"></i>
                                    <span>Cài đặt</span>
                                </div>
                                <i class="fas fa-chevron-down text-xs transition-transform"></i>
                            </button>
                            <div class="admin-dropdown-content hidden pl-8 space-y-1">
                                <a asp-area="Admin" asp-controller="Settings" asp-action="General"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Cài đặt chung
                                </a>
                                <a asp-area="Admin" asp-controller="Settings" asp-action="Payment"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Phương thức thanh toán
                                </a>
                                <a asp-area="Admin" asp-controller="Settings" asp-action="Shipping"
                                    class="block px-4 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-800 rounded transition-colors">
                                    Cài đặt vận chuyển
                                </a>
                            </div>
                        </div>
                    </li>
                </ul>
            </nav>

            <!-- Back to Store -->
            <div class="p-4 border-t border-gray-700">
                <a asp-controller="Home" asp-action="Index" target="_blank"
                    class="flex items-center justify-center w-full px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
                    <i class="fas fa-external-link-alt mr-2"></i>
                    Xem cửa hàng
                </a>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden lg:ml-0">
        <!-- Top Header -->
        <header class="bg-white shadow-sm border-b border-gray-200 z-30">
            <div class="flex items-center justify-between px-6 py-4">
                <!-- Left Side -->
                <div class="flex items-center">
                    <!-- Mobile menu button -->
                    <button id="mobile-sidebar-toggle" class="lg:hidden p-2 text-gray-400 hover:text-gray-600 mr-4">
                        <i class="fas fa-bars text-lg"></i>
                    </button>

                    <!-- Page Title -->
                    <div>
                        <h1 class="text-xl font-semibold text-gray-800">@ViewData["Title"]</h1>
                        @if (ViewBag.Subtitle != null)
                        {
                            <p class="text-sm text-gray-600 mt-1">@ViewBag.Subtitle</p>
                        }
                    </div>
                </div>

                <!-- Right Side -->
                <div class="flex items-center space-x-4">
                    <!-- Search -->
                    <div class="hidden md:block">
                        <form asp-controller="Search" asp-action="Admin" method="get" class="relative">
                            <input type="text" name="q" placeholder="Tìm kiếm..."
                                class="w-64 pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <div class="absolute left-3 top-2.5 text-gray-400">
                                <i class="fas fa-search"></i>
                            </div>
                        </form>
                    </div>

                    <!-- Notifications -->
                    <div class="relative">
                        <button class="relative p-2 text-gray-400 hover:text-gray-600 focus:outline-none">
                            <i class="fas fa-bell text-lg"></i>
                            <span class="absolute top-0 right-0 -mt-1 -mr-1 h-3 w-3 bg-red-500 rounded-full"></span>
                        </button>
                    </div>

                    <!-- User Menu -->
                    <div class="relative group">
                        <button
                            class="flex items-center space-x-2 text-gray-700 hover:text-gray-900 focus:outline-none">
                            <div
                                class="w-8 h-8 bg-primary-500 text-white rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-sm"></i>
                            </div>
                            <span class="hidden md:block text-sm font-medium">@User.Identity.Name</span>
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>

                        <!-- Dropdown -->
                        <div
                            class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                            <div class="py-2">
                                <a asp-area="Identity" asp-page="/Account/Manage/Index" target="_blank"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                    <i class="fas fa-user-cog mr-2"></i>
                                    Tài khoản của tôi
                                </a>
                                <a asp-controller="Home" asp-action="Index" target="_blank"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                    <i class="fas fa-store mr-2"></i>
                                    Xem cửa hàng
                                </a>
                                <div class="border-t border-gray-100 my-1"></div>
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <button type="submit"
                                        class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                        <i class="fas fa-sign-out-alt mr-2"></i>
                                        Đăng xuất
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content Area -->
        <main class="flex-1 overflow-y-auto bg-gray-50">
            <!-- Breadcrumb -->
            @if (ViewBag.ShowBreadcrumb != false)
            {
                <div class="bg-white border-b border-gray-200">
                    <div class="px-6 py-3">
                        <nav class="flex" aria-label="Breadcrumb">
                            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                                <li class="inline-flex items-center">
                                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                                        class="inline-flex items-center text-sm text-gray-500 hover:text-primary-600">
                                        <i class="fas fa-home mr-1"></i>
                                        Dashboard
                                    </a>
                                </li>

                                @if (ViewBag.AdminBreadcrumb != null)
                                {
                                    @foreach (var crumb in ViewBag.AdminBreadcrumb as List<dynamic>)
                                    {
                                        <li>
                                            <div class="flex items-center">
                                                <i class="fas fa-chevron-right mx-2 text-gray-400 text-xs"></i>
                                                @if (crumb.Url != null)
                                                {
                                                    <a href="@crumb.Url" class="text-sm text-gray-500 hover:text-primary-600">
                                                        @crumb.Title
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-sm font-medium text-gray-700">@crumb.Title</span>
                                                }
                                            </div>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li>
                                        <div class="flex items-center">
                                            <i class="fas fa-chevron-right mx-2 text-gray-400 text-xs"></i>
                                            <span class="text-sm font-medium text-gray-700">@ViewData["Title"]</span>
                                        </div>
                                    </li>
                                }
                            </ol>
                        </nav>
                    </div>
                </div>
            }

            <!-- Alert Messages -->
            <partial name="_AlertMessages" />

            <!-- Page Content -->
            <div class="p-6">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Loading Spinner -->
    <partial name="_LoadingSpinner" />

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Admin Layout Scripts -->
    <script>
        $(document).ready(function () {
            // Mobile sidebar toggle
            $('#mobile-sidebar-toggle').on('click', function () {
                $('#sidebar').removeClass('-translate-x-full');
                $('#mobile-menu-overlay').removeClass('hidden');
                $('body').addClass('overflow-hidden');
            });

            // Close mobile sidebar
            $('#mobile-sidebar-close, #mobile-menu-overlay').on('click', function () {
                $('#sidebar').addClass('-translate-x-full');
                $('#mobile-menu-overlay').addClass('hidden');
                $('body').removeClass('overflow-hidden');
            });

            // Admin dropdown toggles
            $('.admin-dropdown-toggle').on('click', function () {
                const $content = $(this).next('.admin-dropdown-content');
                const $icon = $(this).find('i.fa-chevron-down');

                $content.slideToggle(200);
                $icon.toggleClass('rotate-180');

                // Close other dropdowns
                $('.admin-dropdown-content').not($content).slideUp(200);
                $('.admin-dropdown-toggle i.fa-chevron-down').not($icon).removeClass('rotate-180');
            });

            // Highlight current page in sidebar
            const currentPath = window.location.pathname;
            $('aside nav a').each(function () {
                if ($(this).attr('href') === currentPath) {
                    $(this).addClass('bg-gray-800 text-white');
                    $(this).closest('.admin-dropdown-content').show();
                    $(this).closest('.space-y-1').find('.admin-dropdown-toggle i').addClass('rotate-180');
                }
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert-auto-hide').fadeOut(500);
            }, 5000);

            // Confirm delete actions
            $('[data-confirm-delete]').on('click', function (e) {
                if (!confirm('Bạn có chắc muốn xóa mục này không? Hành động này không thể hoàn tác.')) {
                    e.preventDefault();
                    return false;
                }
            });
        });

        // Real-time notifications (WebSocket/SignalR integration)
        function updateNotificationCount(count) {
            const $badge = $('.notification-badge');
            if (count > 0) {
                $badge.text(count).removeClass('hidden');
            } else {
                $badge.addClass('hidden');
            }
        }

        // Admin search suggestions
        let searchTimeout;
        $('input[name="q"]').on('input', function () {
            const query = $(this).val().trim();
            clearTimeout(searchTimeout);

            if (query.length >= 2) {
                searchTimeout = setTimeout(() => {
                    // Implement admin search suggestions
                    console.log('Searching for:', query);
                }, 300);
            }
        });
    </script>

    <style>
        /* Custom scrollbar for sidebar */
        aside::-webkit-scrollbar {
            width: 4px;
        }

        aside::-webkit-scrollbar-track {
            background: #374151;
        }

        aside::-webkit-scrollbar-thumb {
            background: #6B7280;
            border-radius: 2px;
        }

        aside::-webkit-scrollbar-thumb:hover {
            background: #9CA3AF;
        }

        /* Smooth transitions for dropdowns */
        .admin-dropdown-toggle i.fa-chevron-down {
            transition: transform 0.2s ease;
        }

        .rotate-180 {
            transform: rotate(180deg);
        }

        /* Loading state for buttons */
        .btn-loading {
            position: relative;
            pointer-events: none;
        }

        .btn-loading:before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 16px;
            height: 16px;
            margin: -8px 0 0 -8px;
            border: 2px solid currentColor;
            border-radius: 50%;
            border-right-color: transparent;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
</body>

</html>