<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="BookStore - Your one-stop destination for all kinds of books" />
    <meta name="keywords" content="books, online bookstore, novels, education, fiction, non-fiction" />
    <title>@ViewData["Title"] - BookStore</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Additional head content -->
    @await RenderSectionAsync("Head", required: false)
</head>

<body class="min-h-screen bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center space-x-2">
                        <i class="fas fa-book text-primary-600 text-2xl"></i>
                        <span class="font-bold text-xl text-gray-900">BookStore</span>
                    </a>
                </div>

                <!-- Search Bar -->
                <div class="hidden md:flex flex-1 max-w-lg mx-8">
                    <div class="relative w-full">
                        <input type="text" id="search-input" placeholder="Search books, authors, or categories..."
                            class="w-full px-4 py-2 pl-10 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                        <button class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <i class="fas fa-times text-gray-400 hidden" id="clear-search"></i>
                        </button>

                        <!-- Search Suggestions -->
                        <div id="search-suggestions"
                            class="absolute top-full left-0 right-0 bg-white border border-gray-200 rounded-lg shadow-lg mt-1 hidden z-50">
                            <!-- Dynamic content -->
                        </div>
                    </div>
                </div>

                <!-- Navigation Links -->
                <div class="hidden md:flex items-center space-x-6">
                    <a asp-area="" asp-controller="Books" asp-action="Index" class="nav-link">
                        <i class="fas fa-book-open mr-1"></i>
                        Books
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="nav-link">
                        About
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link">
                        Contact
                    </a>
                </div>

                <!-- User Menu -->
                <div class="flex items-center space-x-4">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- Cart Icon -->
                        <a asp-area="" asp-controller="Cart" asp-action="Index"
                            class="relative p-2 text-gray-600 hover:text-primary-600 transition-colors">
                            <i class="fas fa-shopping-cart text-xl"></i>
                            <span id="cart-count"
                                class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center font-semibold">
                                0
                            </span>
                        </a>

                        <!-- User Dropdown -->
                        <div class="relative" x-data="{ open: false }">
                            <button @@click="open = !open"
                                class="flex items-center space-x-2 text-gray-700 hover:text-primary-600 focus:outline-none">
                                <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-user text-primary-600"></i>
                                </div>
                                <span class="hidden lg:block font-medium">@User.Identity.Name</span>
                                <i class="fas fa-chevron-down text-sm"></i>
                            </button>

                            <div x-show="open" @@click.away="open = false" x-transition
                                class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 z-50">
                                <a asp-area="" asp-controller="Account" asp-action="Profile"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-user mr-2"></i>
                                    Profile
                                </a>
                                <a asp-area="" asp-controller="Orders" asp-action="Index"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-receipt mr-2"></i>
                                    My Orders
                                </a>
                                <a asp-area="" asp-controller="Wishlist" asp-action="Index"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-heart mr-2"></i>
                                    Wishlist
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <hr class="my-2">
                                    <a asp-area="" asp-controller="Admin" asp-action="Dashboard"
                                        class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        <i class="fas fa-tachometer-alt mr-2"></i>
                                        Admin Panel
                                    </a>
                                }
                                <hr class="my-2">
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="block">
                                    <button type="submit"
                                        class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        <i class="fas fa-sign-out-alt mr-2"></i>
                                        Logout
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline btn-sm">
                            <i class="fas fa-sign-in-alt mr-1"></i>
                            Login
                        </a>
                        <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary btn-sm">
                            <i class="fas fa-user-plus mr-1"></i>
                            Register
                        </a>
                    }

                    <!-- Mobile Menu Button -->
                    <button id="mobile-menu-button"
                        class="md:hidden p-2 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-100">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="md:hidden hidden bg-white border-t border-gray-200">
            <div class="px-4 py-2 space-y-2">
                <!-- Mobile Search -->
                <div class="relative">
                    <input type="text" placeholder="Search books..."
                        class="w-full px-4 py-2 pl-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                </div>

                <!-- Mobile Navigation Links -->
                <a asp-area="" asp-controller="Books" asp-action="Index"
                    class="block px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                    <i class="fas fa-book-open mr-2"></i>
                    Books
                </a>
                <a asp-area="" asp-controller="Home" asp-action="About"
                    class="block px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                    About
                </a>
                <a asp-area="" asp-controller="Home" asp-action="Contact"
                    class="block px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                    Contact
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow">
        <!-- Breadcrumb -->
        @if (ViewBag.ShowBreadcrumb != false)
        {
            <nav class="bg-gray-100 border-b border-gray-200">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div>

                        @await RenderSectionAsync("Breadcrumb", required: false)
                    </div>
                </div>
            </nav>
        }

        <!-- Flash Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-50 border border-green-200 rounded-lg p-4 mx-4 mt-4">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-green-500 mr-3"></i>
                    <span class="text-green-800">@TempData["SuccessMessage"]</span>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-50 border border-red-200 rounded-lg p-4 mx-4 mt-4">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-triangle text-red-500 mr-3"></i>
                    <span class="text-red-800">@TempData["ErrorMessage"]</span>
                </div>
            </div>
        }

        <!-- Page Content -->
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Company Info -->
                <div class="col-span-1 md:col-span-2">
                    <div class="flex items-center space-x-2 mb-4">
                        <i class="fas fa-book text-primary-400 text-2xl"></i>
                        <span class="font-bold text-xl">BookStore</span>
                    </div>
                    <p class="text-gray-400 mb-4">
                        Your one-stop destination for all kinds of books. Discover new worlds, learn new skills, and
                        expand your knowledge with our extensive collection.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white transition-colors">
                            <i class="fab fa-facebook text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors">
                            <i class="fab fa-twitter text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors">
                            <i class="fab fa-instagram text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors">
                            <i class="fab fa-linkedin text-xl"></i>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div>
                    <h3 class="font-semibold text-lg mb-4">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a asp-area="" asp-controller="Books" asp-action="Index"
                                class="text-gray-400 hover:text-white transition-colors">All Books</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="About"
                                class="text-gray-400 hover:text-white transition-colors">About Us</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact"
                                class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy"
                                class="text-gray-400 hover:text-white transition-colors">Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- Customer Service -->
                <div>
                    <h3 class="font-semibold text-lg mb-4">Customer Service</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">FAQ</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Shipping Info</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Returns</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Support</a></li>
                    </ul>
                </div>
            </div>

            <hr class="border-gray-700 my-8">

            <div class="flex flex-col md:flex-row justify-between items-center">
                <p class="text-gray-400 text-sm">
                    &copy; @DateTime.Now.Year BookStore. All rights reserved.
                </p>
                <p class="text-gray-400 text-sm mt-2 md:mt-0">
                    Made with <i class="fas fa-heart text-red-500"></i> using ASP.NET Core & Tailwind CSS
                </p>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>