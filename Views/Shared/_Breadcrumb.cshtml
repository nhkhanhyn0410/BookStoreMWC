<div class="bg-gray-100 border-b border-gray-200">
    <div class="container mx-auto px-4 py-3">
        <nav class="flex items-center text-sm text-gray-600" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <!-- Home -->
                <li class="inline-flex items-center">
                    <a asp-controller="Home" asp-action="Index"
                        class="inline-flex items-center text-gray-500 hover:text-primary-600 transition-colors">
                        <i class="fas fa-home mr-1"></i>
                        Trang chá»§
                    </a>
                </li>

                <!-- Dynamic Breadcrumb Items -->
                @if (ViewBag.Breadcrumb != null)
                {
                    @foreach (var crumb in ViewBag.Breadcrumb as List<dynamic>)
                    {
                        <li>
                            <div class="flex items-center">
                                <i class="fas fa-chevron-right mx-2 text-gray-400 text-xs"></i>
                                @if (crumb.Url != null)
                                {
                                    <a href="@crumb.Url"
                                        class="ml-1 text-gray-500 hover:text-primary-600 transition-colors md:ml-2">
                                        @crumb.Title
                                    </a>
                                }
                                else
                                {
                                    <span class="ml-1 font-medium text-gray-700 md:ml-2">@crumb.Title</span>
                                }
                            </div>
                        </li>
                    }
                }
                else if (ViewData["Title"] != null)
                {
                    <!-- Fallback to page title -->
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right mx-2 text-gray-400 text-xs"></i>
                            <span class="ml-1 font-medium text-gray-700 md:ml-2">@ViewData["Title"]</span>
                        </div>
                    </li>
                }
            </ol>
        </nav>
    </div>
</div>