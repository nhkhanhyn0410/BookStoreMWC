@* Views/Shared/_BookCard.cshtml *@
@model BookStoreMVC.Models.ViewModels.BookViewModel
@{
    var isAdmin = ViewContext.RouteData.Values["Area"]?.ToString() == "Admin";
    var viewMode = ViewBag.ViewMode ?? "grid"; // grid or list
    var cardClass = viewMode == "list" ? "book-card-list" : "book-card-grid";
}

<div class="@cardClass bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-all duration-300 overflow-hidden">
    @if (viewMode == "grid")
    {
        <!-- Grid Card Layout -->
        <div class="group relative">
            <!-- Book Image -->
            <div class="aspect-[3/4] bg-gray-100 relative overflow-hidden">
                @if (Model.HasImage)
                {
                    <img src="@Model.ImageUrl" alt="@Model.ImageAlt" 
                         class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" 
                         loading="lazy">
                }
                else
                {
                    <div class="w-full h-full flex items-center justify-center bg-gray-100">
                        <i class="fas fa-book text-4xl text-gray-400"></i>
                    </div>
                }
                
                <!-- Overlay Actions -->
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center">
                    <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex space-x-2">
                        @if (isAdmin)
                        {
                            <!-- Admin Actions -->
                            <a href="@Url.Action("EditBook", "Admin", new { area = "Admin", id = Model.Id })"
                               class="bg-green-500 text-white px-3 py-1 rounded text-sm font-medium hover:bg-green-600 transition-colors"
                               title="Chỉnh sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Books", "Admin", new { area = "Admin" })" 
                               onclick="event.preventDefault(); viewBookDetails(@Model.Id)"
                               class="bg-blue-500 text-white px-3 py-1 rounded text-sm font-medium hover:bg-blue-600 transition-colors"
                               title="Xem chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>
                            <button type="button" onclick="confirmDelete(@Model.Id, '@Model.Title')"
                                    class="bg-red-500 text-white px-3 py-1 rounded text-sm font-medium hover:bg-red-600 transition-colors"
                                    title="Xóa sách">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        }
                        else
                        {
                            <!-- User Actions -->
                            <button type="button" onclick="quickView(@Model.Id)"
                                    class="bg-white text-gray-800 px-3 py-1 rounded text-sm font-medium hover:bg-gray-100 transition-colors"
                                    title="Xem nhanh">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button type="button" onclick="addToWishlist(@Model.Id)"
                                    class="bg-red-500 text-white px-3 py-1 rounded text-sm font-medium hover:bg-red-600 transition-colors"
                                    title="Thêm vào yêu thích">
                                <i class="fas fa-heart"></i>
                            </button>
                        }
                    </div>
                </div>

                <!-- Status Badges -->
                <div class="absolute top-2 left-2 flex flex-col space-y-1">
                    @if (!Model.IsActive && isAdmin)
                    {
                        <span class="bg-red-500 text-white text-xs px-2 py-1 rounded">Không hoạt động</span>
                    }
                    @if (Model.HasDiscount)
                    {
                        <span class="bg-red-500 text-white text-xs px-2 py-1 rounded">-@Model.DiscountPercentage%</span>
                    }
                    @if (!Model.InStock)
                    {
                        <span class="bg-gray-500 text-white text-xs px-2 py-1 rounded">Hết hàng</span>
                    }
                    else if (Model.StockQuantity <= 5 && isAdmin)
                    {
                        <span class="bg-yellow-500 text-white text-xs px-2 py-1 rounded">Sắp hết</span>
                    }
                </div>

                <!-- Stock Info for Admin -->
                @if (isAdmin)
                {
                    <div class="absolute top-2 right-2 bg-black bg-opacity-60 text-white text-xs px-2 py-1 rounded">
                        SL: @Model.StockQuantity
                    </div>
                }
            </div>

            <!-- Card Content -->
            <div class="p-4">
                <!-- Category -->
                @if (Model.Category != null)
                {
                    <div class="mb-2">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            @Model.Category.Name
                        </span>
                    </div>
                }

                <!-- Title -->
                <h3 class="text-sm font-semibold text-gray-900 mb-1 line-clamp-2 leading-tight">
                    @if (isAdmin)
                    {
                        <a href="@Url.Action("BookDetails", "Admin", new { area = "Admin", id = Model.Id })" 
                           class="hover:text-primary-600 transition-colors">
                            @Model.Title
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Details", "Book", new { id = Model.Id })" 
                           class="hover:text-primary-600 transition-colors">
                            @Model.Title
                        </a>
                    }
                </h3>

                <!-- Author -->
                <p class="text-xs text-gray-600 mb-2">
                    <i class="fas fa-user text-gray-400 mr-1"></i>
                    @Model.Author
                </p>

                <!-- Price -->
                <div class="flex items-center justify-between">
                    <div class="flex flex-col">
                        <span class="text-lg font-bold text-primary-600">
                            @Model.DisplayPrice.ToString("N0")₫
                        </span>
                        @if (Model.HasDiscount)
                        {
                            <span class="text-xs text-gray-500 line-through">
                                @Model.Price.ToString("N0")₫
                            </span>
                        }
                    </div>

                    @if (!isAdmin && Model.InStock)
                    {
                        <button type="button" onclick="addToCart(@Model.Id)" 
                                class="bg-primary-600 text-white px-3 py-1 rounded text-sm hover:bg-primary-700 transition-colors">
                            <i class="fas fa-shopping-cart mr-1"></i>
                            Thêm
                        </button>
                    }
                </div>

                <!-- Rating (for users) -->
                @if (!isAdmin && Model.Reviews.Any())
                {
                    <div class="mt-2 flex items-center text-xs">
                        <div class="flex text-yellow-400 mr-1">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas fa-star @(i <= Model.AverageRating ? "" : "text-gray-300")"></i>
                            }
                        </div>
                        <span class="text-gray-600">(@Model.ReviewCount)</span>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <!-- List Layout -->
        <div class="flex p-4 space-x-4">
            <!-- Book Image -->
            <div class="flex-shrink-0 w-20 h-28 bg-gray-100 rounded overflow-hidden">
                @if (Model.HasImage)
                {
                    <img src="@Model.ImageUrl" alt="@Model.ImageAlt" 
                         class="w-full h-full object-cover" loading="lazy">
                }
                else
                {
                    <div class="w-full h-full flex items-center justify-center bg-gray-100">
                        <i class="fas fa-book text-2xl text-gray-400"></i>
                    </div>
                }
            </div>

            <!-- Content -->
            <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between">
                    <div class="flex-1 min-w-0">
                        <!-- Category & Status Badges -->
                        <div class="flex items-center space-x-2 mb-2">
                            @if (Model.Category != null)
                            {
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    @Model.Category.Name
                                </span>
                            }
                            @if (!Model.IsActive && isAdmin)
                            {
                                <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full">Không hoạt động</span>
                            }
                            @if (Model.HasDiscount)
                            {
                                <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full">-@Model.DiscountPercentage%</span>
                            }
                            @if (!Model.InStock)
                            {
                                <span class="bg-gray-100 text-gray-800 text-xs px-2 py-1 rounded-full">Hết hàng</span>
                            }
                        </div>

                        <!-- Title -->
                        <h3 class="text-base font-semibold text-gray-900 mb-1 truncate">
                            @if (isAdmin)
                            {
                                <a href="@Url.Action("BookDetails", "Admin", new { area = "Admin", id = Model.Id })" 
                                   class="hover:text-primary-600 transition-colors">
                                    @Model.Title
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Details", "Book", new { id = Model.Id })" 
                                   class="hover:text-primary-600 transition-colors">
                                    @Model.Title
                                </a>
                            }
                        </h3>

                        <!-- Author & Publisher -->
                        <p class="text-sm text-gray-600 mb-1">
                            <i class="fas fa-user text-gray-400 mr-1"></i>
                            @Model.Author
                        </p>
                        @if (!string.IsNullOrEmpty(Model.Publisher))
                        {
                            <p class="text-xs text-gray-500 mb-2">
                                <i class="fas fa-building text-gray-400 mr-1"></i>
                                @Model.Publisher
                            </p>
                        }

                        <!-- Description (truncated) -->
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-sm text-gray-600 line-clamp-2 mb-2">
                                @Model.Description
                            </p>
                        }

                        <!-- Rating & Stock (Admin) -->
                        <div class="flex items-center space-x-4 text-sm">
                            @if (!isAdmin && Model.Reviews.Any())
                            {
                                <div class="flex items-center">
                                    <div class="flex text-yellow-400 mr-1">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star text-xs @(i <= Model.AverageRating ? "" : "text-gray-300")"></i>
                                        }
                                    </div>
                                    <span class="text-gray-600 text-xs">(@Model.ReviewCount)</span>
                                </div>
                            }
                            @if (isAdmin)
                            {
                                <span class="text-gray-600">
                                    <i class="fas fa-boxes mr-1"></i>
                                    Tồn kho: @Model.StockQuantity
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Price & Actions -->
                    <div class="flex flex-col items-end space-y-2 ml-4">
                        <!-- Price -->
                        <div class="text-right">
                            <div class="text-lg font-bold text-primary-600">
                                @Model.DisplayPrice.ToString("N0")₫
                            </div>
                            @if (Model.HasDiscount)
                            {
                                <div class="text-sm text-gray-500 line-through">
                                    @Model.Price.ToString("N0")₫
                                </div>
                            }
                        </div>

                        <!-- Actions -->
                        <div class="flex space-x-2">
                            @if (isAdmin)
                            {
                                <!-- Admin Actions -->
                                <a href="@Url.Action("EditBook", "Admin", new { area = "Admin", id = Model.Id })"
                                   class="inline-flex items-center justify-center w-8 h-8 rounded-full text-green-600 hover:bg-green-50 transition-colors"
                                   title="Chỉnh sửa">
                                    <i class="fas fa-edit text-sm"></i>
                                </a>
                                <button type="button" onclick="viewBookDetails(@Model.Id)"
                                        class="inline-flex items-center justify-center w-8 h-8 rounded-full text-blue-600 hover:bg-blue-50 transition-colors"
                                        title="Xem chi tiết">
                                    <i class="fas fa-eye text-sm"></i>
                                </button>
                                <button type="button" onclick="confirmDelete(@Model.Id, '@Model.Title')"
                                        class="inline-flex items-center justify-center w-8 h-8 rounded-full text-red-600 hover:bg-red-50 transition-colors"
                                        title="Xóa sách">
                                    <i class="fas fa-trash-alt text-sm"></i>
                                </button>
                            }
                            else if (Model.InStock)
                            {
                                <!-- User Actions -->
                                <button type="button" onclick="addToWishlist(@Model.Id)"
                                        class="inline-flex items-center justify-center w-8 h-8 rounded-full text-red-600 hover:bg-red-50 transition-colors"
                                        title="Yêu thích">
                                    <i class="fas fa-heart text-sm"></i>
                                </button>
                                <button type="button" onclick="addToCart(@Model.Id)"
                                        class="bg-primary-600 text-white px-4 py-2 rounded text-sm hover:bg-primary-700 transition-colors">
                                    <i class="fas fa-shopping-cart mr-1"></i>
                                    Thêm vào giỏ
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
.book-card-grid {
    /* Grid card styles */
}

.book-card-list {
    /* List card styles */
}

.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>