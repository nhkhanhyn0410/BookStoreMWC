@using BookStoreMVC.Models.ViewModels
@model BookViewModel

<div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden group">
    <!-- Image Container -->
    <div class="relative aspect-[3/4] overflow-hidden">
        <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id">
            <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/default-book-cover.jpg")"
                alt="@Model.Title"
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
        </a>

        <!-- Overlay Actions -->
        <div
            class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center">
            <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex space-x-2">
                <button onclick="quickView(@Model.Id)"
                    class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-lg hover:bg-primary-50 hover:text-primary-600 transition-colors">
                    <i class="fas fa-eye text-sm"></i>
                </button>
                <button onclick="addToWishlist(@Model.Id)"
                    class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-lg hover:bg-red-50 hover:text-red-500 transition-colors">
                    <i class="fas fa-heart text-sm"></i>
                </button>
            </div>
        </div>

        <!-- Sale Badge -->
        @if (Model.DiscountPrice.HasValue && Model.DiscountPrice < Model.Price)
        {
            <div class="absolute top-3 left-3">
                <span class="bg-red-500 text-white text-xs px-2 py-1 rounded-full font-semibold">
                    -@(((Model.Price - Model.DiscountPrice.Value) / Model.Price * 100))%
                </span>
            </div>
        }

        <!-- Stock Status -->
        @if (Model.StockQuantity <= 0)
        {
            <div class="absolute inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center">
                <span class="bg-gray-800 text-white px-4 py-2 rounded-lg font-semibold">Hết hàng</span>
            </div>
        }
        else if (Model.StockQuantity <= 5)
        {
            <div class="absolute top-3 right-3">
                <span class="bg-yellow-500 text-white text-xs px-2 py-1 rounded-full font-semibold">
                    Còn @Model.StockQuantity
                </span>
            </div>
        }
    </div>

    <!-- Content -->
    <div class="p-4 space-y-3">
        <!-- Category & Title -->
        <div>
            <div class="text-xs text-primary-600 font-medium uppercase tracking-wide mb-1">
                @Model.Category?.Name
            </div>
            <h3 class="font-semibold text-gray-900 hover:text-primary-600 transition-colors line-clamp-2">
                <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id">
                    @Model.Title
                </a>
            </h3>
        </div>

        <!-- Author -->
        <p class="text-sm text-gray-600">@Model.Author</p>

        <!-- Rating -->
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <div class="flex items-center text-yellow-400 mr-2">
                    @{
                        var rating = Model.Reviews?.Any() == true ? Model.Reviews.Average(r => r.Rating) : 0;
                        for (int i = 1; i <= 5; i++)
                        {
                            <i class="fas fa-star text-xs @(i <= rating ? "text-yellow-400" : "text-gray-300")"></i>
                        }
                    }
                </div>
                <span class="text-xs text-gray-500">
                    (@(Model.Reviews?.Count ?? 0))
                </span>
            </div>
        </div>

        <!-- Price -->
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
                @if (Model.DiscountPrice.HasValue && Model.DiscountPrice < Model.Price)
                {
                    <span class="text-lg font-bold text-red-600">
                        @Model.DiscountPrice.Value.ToString("N0")₫
                    </span>
                    <span class="text-sm text-gray-500 line-through">
                        @Model.Price.ToString("N0")₫
                    </span>
                }
                else
                {
                    <span class="text-lg font-bold text-gray-900">
                        @Model.Price.ToString("N0")₫
                    </span>
                }
            </div>
        </div>

        <!-- Add to Cart Button -->
        @if (Model.StockQuantity > 0)
        {
            <button onclick="addToCart(@Model.Id)"
                class="w-full bg-primary-600 text-white py-2 px-4 rounded-lg hover:bg-primary-700 transition-colors font-medium flex items-center justify-center">
                <i class="fas fa-shopping-cart mr-2"></i>
                Thêm vào giỏ
            </button>
        }
        else
        {
            <button disabled class="w-full bg-gray-300 text-gray-500 py-2 px-4 rounded-lg cursor-not-allowed font-medium">
                <i class="fas fa-times mr-2"></i>
                Hết hàng
            </button>
        }
    </div>
</div>

