@using Microsoft.AspNetCore.Identity
@using BookStoreMVC.Models.Entities;
@using BookStoreMVC.Controllers;
@inject SignInManager<User> SignInManager

{
<!-- Logged In User -->
<div class="relative group">
    <button class="flex items-center space-x-2 text-gray-700 hover:text-primary-600 transition-colors">
        <div class="w-8 h-8 bg-primary-500 text-white rounded-full flex items-center justify-center">
            <i class="fas fa-user text-sm"></i>
        </div>
        <div class="hidden lg:block text-left">
            <div class="text-sm font-medium text-gray-900">@User.Identity.Name</div>
            <div class="text-xs text-gray-500">Thành viên</div>
        </div>
        <i class="fas fa-chevron-down ml-1 text-xs"></i>
    </button>

    <!-- Dropdown Menu -->
    <div
        class="absolute top-full right-0 mt-2 w-56 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
        <div class="p-2">
            <!-- User Info -->
            <div class="px-3 py-2 border-b border-gray-100">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-primary-500 text-white rounded-full flex items-center justify-center">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <div class="font-medium text-gray-900">@User.Identity.Name</div>
                        <div class="text-sm text-gray-500">@User.FindFirst("email")?.Value</div>
                    </div>
                </div>
            </div>

            <!-- Menu Items -->
            <div class="py-2">
                <a asp-area="Identity" asp-page="/Account/Manage/Index"
                    class="flex items-center px-3 py-2 text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors rounded-md">
                    <i class="fas fa-user-cog mr-3 w-4"></i>
                    Quản lý tài khoản
                </a>

                <a asp-controller="Orders" asp-action="Index"
                    class="flex items-center px-3 py-2 text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors rounded-md">
                    <i class="fas fa-shopping-bag mr-3 w-4"></i>
                    Đơn hàng của tôi
                </a>

                <a asp-controller="Wishlist" asp-action="Index"
                    class="flex items-center px-3 py-2 text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors rounded-md">
                    <i class="fas fa-heart mr-3 w-4"></i>
                    Danh sách yêu thích
                </a>

                <a asp-controller="Reviews" asp-action="MyReviews"
                    class="flex items-center px-3 py-2 text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors rounded-md">
                    <i class="fas fa-star mr-3 w-4"></i>
                    Đánh giá của tôi
                </a>
            </div>

            <!-- Logout -->
            <div class="border-t border-gray-100 pt-2">
                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="w-full">
                    <button type="submit"
                        class="flex items-center w-full px-3 py-2 text-red-600 hover:bg-red-50 transition-colors rounded-md">
                        <i class="fas fa-sign-out-alt mr-3 w-4"></i>
                        Đăng xuất
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
}