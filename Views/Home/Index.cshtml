@model BookStoreMVC.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "BookStore - Khám phá thế giới sách";
    ViewBag.ShowBreadcrumb = false;
}

@section Meta {
    <meta name="description" content="Khám phá bộ sưu tập sách phong phú với hàng ngàn đầu sách từ khắp nơi trên thế giới. Mua sách online với giá tốt nhất." />
    <meta name="keywords" content="sách, mua sách online, book store, văn học, tiểu thuyết" />
}

@section Styles {
    <style>
        .hero-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
    </style>
}

<!-- Hero Section -->
<section class="hero-gradient text-white py-16 mb-8">
    <div class="container mx-auto px-4">
        <div class="text-center max-w-4xl mx-auto">
            <h1 class="text-4xl md:text-6xl font-bold mb-6">
                Khám phá thế giới <span class="text-yellow-300">sách</span>
            </h1>
            <p class="text-xl md:text-2xl mb-8 opacity-90">
                Hàng ngàn đầu sách hay từ khắp nơi trên thế giới
            </p>
            
            <!-- Search Bar -->
            <div class="max-w-2xl mx-auto">
                <form asp-controller="Books" asp-action="Index" method="get" class="flex">
                    <input type="text" name="searchTerm" placeholder="Tìm kiếm sách, tác giả, thể loại..." 
                           class="flex-1 px-6 py-4 rounded-l-lg text-gray-800 text-lg focus:outline-none focus:ring-2 focus:ring-yellow-300" />
                    <button type="submit" 
                            class="bg-yellow-500 hover:bg-yellow-600 px-8 py-4 rounded-r-lg text-gray-800 font-semibold transition-colors">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="py-8 mb-12">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="text-center">
                <div class="text-3xl font-bold text-blue-600">@Model.TotalBooks.ToString("N0")</div>
                <div class="text-gray-600">Đầu sách</div>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-green-600">@Model.TotalUsers.ToString("N0")</div>
                <div class="text-gray-600">Độc giả</div>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-purple-600">@Model.TotalOrders.ToString("N0")</div>
                <div class="text-gray-600">Đơn hàng</div>
            </div>
            @* <div class="text-center">
                <div class="text-3xl font-bold text-orange-600">@Model.TotalRevenue.ToString("C0")</div>
                <div class="text-gray-600">Doanh thu</div>
            </div> *@
        </div>
    </div>
</section>

<!-- Featured Books Section -->
@if (Model.FeaturedBooks?.Any() == true)
{
    <section class="py-12 mb-8">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center mb-8">
                <div>
                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Sách nổi bật</h2>
                    <p class="text-gray-600">Những cuốn sách được lựa chọn đặc biệt cho bạn</p>
                </div>
                <a asp-controller="Books" asp-action="Index" asp-route-featured="true" 
                   class="text-blue-600 hover:text-blue-800 font-semibold flex items-center">
                    Xem tất cả <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                @foreach (var book in Model.FeaturedBooks.Take(8))
                {
                    <div class="bg-white rounded-lg shadow-md card-hover overflow-hidden">
                        <div class="aspect-w-3 aspect-h-4">
                            <img src="@(book.ImageUrl ?? "/images/no-book-cover.png")" 
                                 alt="@book.Title" 
                                 class="w-full h-48 object-cover" />
                        </div>
                        <div class="p-4">
                            <h3 class="font-semibold text-gray-800 mb-2 line-clamp-2" title="@book.Title">
                                @book.Title
                            </h3>
                            <p class="text-gray-600 text-sm mb-2">@book.Author</p>
                            <div class="flex items-center mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= book.AverageRating ? "text-yellow-500" : "text-gray-300") text-sm"></i>
                                }
                                @* <span class="text-gray-600 text-sm ml-2">(@book.ReviewsCount)</span> *@
                            </div>
                            <div class="flex justify-between items-center">
                                <div class="text-lg font-bold text-blue-600">
                                    @book.DisplayPrice.ToString("C0")
                                </div>
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" 
                                   class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-semibold transition-colors">
                                    Chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

