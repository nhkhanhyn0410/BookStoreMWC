@using BookStoreMVC.Models.Entities
@model BookStoreMVC.Models.Entities.Book;

@{
    ViewData["Title"] = Model.Title;
    var averageRating = Model.Reviews?.Any() == true ? Model.Reviews.Average(r => r.Rating) : 0;
    var reviewCount = Model.Reviews?.Count() ?? 0;
}

<div class="bg-gray-50 min-h-screen">
    <!-- Breadcrumb -->
    <div class="bg-white shadow-sm">
        <div class="container mx-auto px-4 py-4">
            <nav class="flex items-center space-x-2 text-sm">
                <a asp-controller="Home" asp-action="Index" class="text-blue-600 hover:text-blue-800 transition-colors">Trang chủ</a>
                <i class="fas fa-chevron-right text-gray-400"></i>
                <a asp-controller="Books" asp-action="Index" class="text-blue-600 hover:text-blue-800 transition-colors">Sách</a>
                @if (Model.Category != null)
                {
                    <i class="fas fa-chevron-right text-gray-400"></i>
                    <a asp-controller="Books" asp-action="Index" asp-route-categoryId="@Model.CategoryId" 
                       class="text-blue-600 hover:text-blue-800 transition-colors">@Model.Category.NameCategory</a>
                }
                <i class="fas fa-chevron-right text-gray-400"></i>
                <span class="text-gray-600">@Model.Title</span>
            </nav>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8">
        <!-- Book Details -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 p-8">
                <!-- Book Image -->
                <div class="space-y-4">
                    <div class="relative">
                        <img id="main-image" src="@(Model.ImageUrl ?? "https://via.placeholder.com/500x700/e5e7eb/6b7280?text=No+Image")" 
                             alt="@Model.Title" 
                             class="w-full max-w-md mx-auto rounded-lg shadow-lg">
                        
                        <!-- Sale Badge -->
                        @if (Model.DiscountPrice.HasValue && Model.DiscountPrice < Model.Price)
                        {
                            var discount = Math.Round((1 - (Model.DiscountPrice.Value / Model.Price)) * 100);
                            <div class="absolute top-4 left-4 bg-red-500 text-white px-3 py-1 rounded-lg font-semibold">
                                -@discount%
                            </div>
                        }

                        <!-- Stock Status -->
                        @if (Model.StockQuantity <= 0)
                        {
                            <div class="absolute top-4 right-4 bg-gray-500 text-white px-3 py-1 rounded-lg font-semibold">
                                Hết hàng
                            </div>
                        }
                        else if (Model.StockQuantity <= 10)
                        {
                            <div class="absolute top-4 right-4 bg-yellow-500 text-white px-3 py-1 rounded-lg font-semibold">
                                Còn @Model.StockQuantity
                            </div>
                        }
                    </div>
                </div>

                <!-- Book Info -->
                <div class="space-y-6">
                    <!-- Category -->
                    @if (Model.Category != null)
                    {
                        <div>
                            <a asp-controller="Books" asp-action="Index" asp-route-categoryId="@Model.CategoryId"
                               class="inline-block bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full hover:bg-blue-200 transition-colors">
                                @Model.Category.NameCategory
                            </a>
                        </div>
                    }

                    <!-- Title & Author -->
                    <div>
                        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">@Model.Title</h1>
                        <p class="text-xl text-gray-600">Tác giả: <span class="font-semibold">@Model.Author</span></p>
                    </div>

                    <!-- Rating -->
                    @if (reviewCount > 0)
                    {
                        <div class="flex items-center space-x-4">
                            <div class="flex items-center space-x-1">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star text-lg @(i <= averageRating ? "text-yellow-400" : "text-gray-300")"></i>
                                }
                            </div>
                            <span class="text-lg font-semibold text-gray-900">@averageRating.ToString("F1")</span>
                            <span class="text-gray-600">(@reviewCount đánh giá)</span>
                        </div>
                    }

                    <!-- Price -->
                    <div class="bg-gray-50 p-6 rounded-lg">
                        <div class="flex items-center space-x-4 mb-4">
                            @if (Model.DiscountPrice.HasValue && Model.DiscountPrice < Model.Price)
                            {
                                <span class="text-3xl font-bold text-red-600">@Model.DiscountPrice.Value.ToString("C0")</span>
                                <span class="text-xl text-gray-500 line-through">@Model.Price.ToString("C0")</span>
                                <span class="bg-red-100 text-red-800 px-2 py-1 rounded-lg text-sm font-semibold">
                                    Tiết kiệm @((Model.Price - Model.DiscountPrice.Value).ToString("C0"))
                                </span>
                            }
                            else
                            {
                                <span class="text-3xl font-bold text-gray-900">@Model.Price.ToString("C0")</span>
                            }
                        </div>

                        <!-- Stock Info -->
                        <div class="mb-4">
                            @if (Model.StockQuantity <= 0)
                            {
                                <div class="flex items-center text-red-600">
                                    <i class="fas fa-times-circle mr-2"></i>
                                    <span class="font-semibold">Hết hàng</span>
                                </div>
                            }
                            else if (Model.StockQuantity <= 10)
                            {
                                <div class="flex items-center text-yellow-600">
                                    <i class="fas fa-exclamation-triangle mr-2"></i>
                                    <span class="font-semibold">Chỉ còn @Model.StockQuantity sản phẩm</span>
                                </div>
                            }
                            else
                            {
                                <div class="flex items-center text-green-600">
                                    <i class="fas fa-check-circle mr-2"></i>
                                    <span class="font-semibold">Còn hàng</span>
                                </div>
                            }
                        </div>

                        <!-- Actions -->
                        <div class="space-y-3">
                            @if (Model.StockQuantity > 0)
                            {
                                <!-- Quantity Selector -->
                                <div class="flex items-center space-x-4">
                                    <span class="text-gray-700 font-medium">Số lượng:</span>
                                    <div class="flex items-center border border-gray-300 rounded-lg">
                                        <button type="button" onclick="changeQuantity(-1)" 
                                                class="px-3 py-2 text-gray-600 hover:bg-gray-100 transition-colors">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="number" id="quantity" value="1" min="1" max="@Model.StockQuantity"
                                               class="w-16 text-center border-0 focus:ring-0">
                                        <button type="button" onclick="changeQuantity(1)" 
                                                class="px-3 py-2 text-gray-600 hover:bg-gray-100 transition-colors">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>

                                <!-- Add to Cart -->
                                <button onclick="addToCartWithQuantity(@Model.Id)" 
                                        class="w-full bg-blue-600 text-white py-4 rounded-lg font-semibold text-lg hover:bg-blue-700 transition-all duration-300 transform hover:scale-105 active:scale-95">
                                    <i class="fas fa-shopping-cart mr-2"></i>
                                    Thêm vào giỏ hàng
                                </button>

                                <!-- Buy Now -->
                                <button onclick="buyNow(@Model.Id)" 
                                        class="w-full bg-orange-500 text-white py-4 rounded-lg font-semibold text-lg hover:bg-orange-600 transition-all duration-300">
                                    <i class="fas fa-bolt mr-2"></i>
                                    Mua ngay
                                </button>
                            }
                            else
                            {
                                <button disabled 
                                        class="w-full bg-gray-400 text-white py-4 rounded-lg font-semibold text-lg cursor-not-allowed">
                                    <i class="fas fa-times mr-2"></i>
                                    Hết hàng
                                </button>
                            }

                            <!-- Wishlist -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <button onclick="addToWishlist(@Model.Id)" 
                                        class="w-full border-2 border-red-500 text-red-500 py-3 rounded-lg font-semibold hover:bg-red-500 hover:text-white transition-colors">
                                    <i class="fas fa-heart mr-2"></i>
                                    Thêm vào yêu thích
                                </button>
                            }
                        </div>
                    </div>

                    <!-- Quick Info -->
                    <div class="grid grid-cols-2 gap-4 text-sm">
                        @if (!string.IsNullOrEmpty(Model.Size))
                        {
                            <div>
                                <span class="text-gray-500">ISBN:</span>
                                <span class="font-semibold">@Model.Size</span>
                            </div>
                        }
                        <div>
                            <span class="text-gray-500">Ngày phát hành:</span>
                            <span class="font-semibold">@Model.PublisheDate?.ToString("dd/MM/yyyy")</span>
                        </div>
                        @if (Model.PageCount.HasValue)
                        {
                            <div>
                                <span class="text-gray-500">Số trang:</span>
                                <span class="font-semibold">@Model.PageCount</span>
                            </div>
                        }
                        <div>
                            <span class="text-gray-500">Tình trạng:</span>
                            <span class="font-semibold @(Model.StockQuantity > 0 ? "text-green-600" : "text-red-600")">
                                @(Model.StockQuantity > 0 ? "Còn hàng" : "Hết hàng")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs Section -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <!-- Tab Headers -->
            <div class="border-b border-gray-200">
                <nav class="flex space-x-8 px-8" aria-label="Tabs">
                    <button class="tab-button py-4 px-1 border-b-2 border-blue-500 font-medium text-sm text-blue-600" 
                            data-tab="description">
                        Mô tả sản phẩm
                    </button>
                    <button class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300" 
                            data-tab="reviews">
                        Đánh giá (@reviewCount)
                    </button>
                    <button class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300" 
                            data-tab="shipping">
                        Thông tin vận chuyển
                    </button>
                </nav>
            </div>

            <!-- Tab Content -->
            <div class="p-8">
                <!-- Description Tab -->
                <div id="description-tab" class="tab-content">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="prose max-w-none">
                            <p class="text-gray-700 leading-relaxed">@Model.Description</p>
                        </div>
                    }
                    else
                    {
                        <p class="text-gray-500 italic">Chưa có mô tả cho sản phẩm này.</p>
                    }
                </div>

                <!-- Reviews Tab -->
                <div id="reviews-tab" class="tab-content hidden">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Add Review Form -->
                        <div class="bg-gray-50 p-6 rounded-lg mb-8">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Viết đánh giá</h3>
                            <form id="review-form" asp-controller="Reviews" asp-action="Create" method="post">
                                <input type="hidden" name="BookId" value="@Model.Id" />
                                
                                <div class="mb-4">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Đánh giá của bạn</label>
                                    <div class="flex items-center space-x-1" id="rating-stars">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <button type="button" class="star text-2xl text-gray-300 hover:text-yellow-400 transition-colors" data-rating="@i">
                                                <i class="fas fa-star"></i>
                                            </button>
                                        }
                                    </div>
                                    <input type="hidden" name="Rating" id="rating-input" value="0" />
                                </div>

                                <div class="mb-4">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Nhận xét</label>
                                    <textarea name="Comment" rows="4" 
                                              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                              placeholder="Chia sẻ cảm nhận của bạn về cuốn sách này..."></textarea>
                                </div>

                                <button type="submit" 
                                        class="bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                                    Gửi đánh giá
                                </button>
                            </form>
                        </div>
                    }

                    <!-- Reviews List -->
                    <div id="reviews-list">
                        @if (Model.Reviews?.Any() == true)
                        {
                            <div class="space-y-6">
                                @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt))
                                {
                                    <div class="border-b border-gray-200 pb-6">
                                        <div class="flex items-start space-x-4">
                                            <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white font-semibold">
                                                @review.User.UserName?.Substring(0, 1).ToUpper()
                                            </div>
                                            <div class="flex-1">
                                                <div class="flex items-center space-x-2 mb-2">
                                                    <span class="font-semibold text-gray-900">@review.User.UserName</span>
                                                    <div class="flex items-center space-x-1">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <i class="fas fa-star text-sm @(i <= review.Rating ? "text-yellow-400" : "text-gray-300")"></i>
                                                        }
                                                    </div>
                                                    <span class="text-sm text-gray-500">@review.CreatedAt.ToString("dd/MM/yyyy")</span>
                                                </div>
                                                <p class="text-gray-700">@review.Comment</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-8">
                                <i class="fas fa-comments text-4xl text-gray-300 mb-4"></i>
                                <h3 class="text-lg font-semibold text-gray-900 mb-2">Chưa có đánh giá nào</h3>
                                <p class="text-gray-600">Hãy là người đầu tiên đánh giá cuốn sách này!</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Shipping Tab -->
                <div id="shipping-tab" class="tab-content hidden">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Thông tin vận chuyển</h3>
                            <div class="space-y-4">
                                <div class="flex items-center space-x-3">
                                    <i class="fas fa-truck text-blue-600"></i>
                                    <div>
                                        <div class="font-semibold">Giao hàng tiêu chuẩn</div>
                                        <div class="text-sm text-gray-600">3-5 ngày làm việc - Phí: 30.000đ</div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <i class="fas fa-shipping-fast text-green-600"></i>
                                    <div>
                                        <div class="font-semibold">Giao hàng nhanh</div>
                                        <div class="text-sm text-gray-600">1-2 ngày làm việc - Phí: 50.000đ</div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <i class="fas fa-gift text-purple-600"></i>
                                    <div>
                                        <div class="font-semibold">Miễn phí vận chuyển</div>
                                        <div class="text-sm text-gray-600">Cho đơn hàng từ 500.000đ</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Chính sách đổi trả</h3>
                            <div class="space-y-3 text-gray-700">
                                <p>• Đổi trả trong vòng 30 ngày</p>
                                <p>• Sản phẩm còn nguyên vẹn, chưa sử dụng</p>
                                <p>• Hoàn tiền 100% nếu lỗi từ nhà sản xuất</p>
                                <p>• Hỗ trợ đổi size miễn phí</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Books -->
        @if (ViewBag.RelatedBooks != null)
        {
            var relatedBooks = (IEnumerable<Book>)ViewBag.RelatedBooks;
            if (relatedBooks.Any())
            {
                <div class="mt-12">
                    <h2 class="text-2xl font-bold text-gray-900 mb-8">Sách liên quan</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                        @foreach (var book in relatedBooks.Take(4))
                        {
                            <partial name="BookCard" model="book" />
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        // Tab functionality
        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', function() {
                const targetTab = this.getAttribute('data-tab');
                
                // Remove active class from all tabs
                document.querySelectorAll('.tab-button').forEach(tab => {
                    tab.classList.remove('border-blue-500', 'text-blue-600');
                    tab.classList.add('border-transparent', 'text-gray-500');
                });
                
                // Add active class to clicked tab
                this.classList.add('border-blue-500', 'text-blue-600');
                this.classList.remove('border-transparent', 'text-gray-500');
                
                // Hide all tab contents
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.add('hidden');
                });
                
                // Show target tab content
                document.getElementById(targetTab + '-tab').classList.remove('hidden');
            });
        });

        // Rating stars functionality
        document.querySelectorAll('.star').forEach(star => {
            star.addEventListener('click', function() {
                const rating = parseInt(this.getAttribute('data-rating'));
                document.getElementById('rating-input').value = rating;
                
                document.querySelectorAll('.star').forEach((s, index) => {
                    if (index < rating) {
                        s.classList.add('text-yellow-400');
                        s.classList.remove('text-gray-300');
                    } else {
                        s.classList.remove('text-yellow-400');
                        s.classList.add('text-gray-300');
                    }
                });
            });
        });

        // Quantity change
        function changeQuantity(change) {
            const quantityInput = document.getElementById('quantity');
            const currentValue = parseInt(quantityInput.value);
            const newValue = currentValue + change;
            const maxValue = parseInt(quantityInput.getAttribute('max'));
            
            if (newValue >= 1 && newValue <= maxValue) {
                quantityInput.value = newValue;
            }
        }

        // Add to cart with quantity
        function addToCartWithQuantity(bookId) {
            const quantity = document.getElementById('quantity').value;
            addToCart(bookId, quantity);
        }

        // Buy now functionality
        function buyNow(bookId) {
            const quantity = document.getElementById('quantity').value;
            addToCart(bookId, quantity).then(() => {
                window.location.href = '@Url.Action("Index", "Cart")';
            });
        }

        // Load cart count
        loadCartCount();
    </script>
}